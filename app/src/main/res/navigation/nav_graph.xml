            app:destination="@id/itemDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.yoox.items.presentation.itemDetails.ItemDetailsFragment"
        android:label="ItemDetailFragment">

        <argument
            android:name="cod"
            app:argType="string" />

    </fragment>

</navigation>
